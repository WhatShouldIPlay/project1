<div class="container">
  <div class="title-container">
    <h2>Groups List</h2>
    <a href="/group/new" class="btn btn-success">Create group</a>
  </div>
  <div class="row">
    {{#each groups}}
    <div class="card" style="width: 18rem;">
      <img class="card-img-top" src="{{img.path}}" alt="{{img.filename}}" width="250px" height="250px">
      <div class="card-body">
        <a class="card-title" href="/group/{{_id}}">{{name}}</a>
      </div>
    </div>
    {{/each}} {{#if message}}
    <label for="">{{message}}</label>
    {{/if}}
  </div>
</div>