<!-- views/auth/signup.hbs -->
<section>
  <div class="title-container">
    <h2>Edit this group</h2>
  </div>
  <form action="/group/{{group._id}}/edit" method="POST" id="form-container" enctype="multipart/form-data">
    {{#if message }}
    <div class="error-message">{{ message }}</div>
    {{/if}}

    <div class="form-group">
      <label for="name">Group Name</label>
      <input class="form-control" id="name" type="text" name="name" value="{{group.name}}">
    </div>

    <div class="form-group">
      <label for="location">Location</label>
      <input class="form-control" id="location" type="text" name="location" value="{{group.location}}">
    </div>

    <div class="form-group">
      <label for="members">Members</label>
      <input class="form-control" id="members" type="text" name="members" value="{{#each group.members}}{{this.username}}, {{/each}}">
    </div>

    <div class="form-check">
      <input class="form-check-input" id="checkbox" type="checkbox" name="checkbox" placeholder="Accept new members?">
      <label for="newMembers">New Members</label>
    </div>

    <div class="form-group">
      <label for="img">Imagen</label>
      <input class="form-control" id="img" type="file" name="img">
    </div>

    <button class="btn btn-success">Edit</button>
  </form>
</section>