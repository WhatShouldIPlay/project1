<section>
  <div class="title-container">
    <h2>New Appointment</h2>
  </div>

  <form action="/appointment/new" method="POST" id="form-container">
    {{#if message }}
    <div class="error-message">{{ message }}</div>
    {{/if}}

    <div class="form-group">
      <label for="date">Date:</label>
      <input class="form-control" id="date" type="datetime-local" name="date" placeholder="Group Name" required>
    </div>

    <div class="form-group">
      <label for="players">Players: </label>
      <input class="form-control" id="players" type="text" name="players" placeholder="Players who are participating" required>
    </div>


    <div class="form-group">
      <label for="group">Group: </label>
      <input class="form-control" id="group" type="text" name="group" placeholder="Insert a group" required>
    </div>

    <div class="form-group">
      <label for="game">Game: </label>
      <input class="form-control" id="game" type="text" name="game" placeholder="What are you gonna play?" required>
    </div>


    <button class="btn btn-success">Create</button>
  </form>
</section>