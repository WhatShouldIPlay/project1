<h1>Open Games list</h1>
<div>
  <a href="/appointment/new">Create a new Appointment</a>
  <h2>OR</h2>
</div>
<div>
  <form action="/appointment/search" method="post">
  <h2>Find an open Game! </h2>
  <label for="game">Game: </label>
  <input type="text" name="game" id="game">
  <label for="date">Date: </label>
  <input type="datetime-local" name="date" id="date">
  <label for="group">Group: </label>
  <input type="text" name="group" id="group">
  <button>Find!</button>
  </form>
</div>
{{#each appointment}}
{{#fecha date}}
{{this}}
{{/fecha}}
<a href="/appointment/{{_id}}/">{{group.name}}</a>
<h2>{{game.name}}</h2>
{{/each}}
